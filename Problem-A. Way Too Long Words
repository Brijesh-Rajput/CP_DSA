}

int main(){
#ifndef ONLINE_JUDGE
    freopen("Input.txt","r",stdin); 
    freopen("Output.txt","w",stdout);
#endif

    int n;
    cin>>n;
    while(n--){
        string word;
        cin>>word;
        if(word.length()<=10) cout<<word<<endl;
        else{
            word.replace(word.begin()+1,word.end()-1,to_string(word.length()-2));
            cout<<word<<endl;
        }
    }  

}
