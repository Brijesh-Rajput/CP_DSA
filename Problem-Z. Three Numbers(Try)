	int k,s;
	cin>>k>>s;

	int count=0;
	//TC=O((k+1)^2)2 1
	for(int x=0;x<=k;x++)
		for(int y=0;y<=k;y++)
			if(s-x-y>=0 && s-x-y<=k) count++;  //x+y+z=s => z=s-x-y;
	cout<<count;

	/* 1sec - 10^8 
	//Brutforce Approach :- TC=O((k+1)^3) > 1sec in this question 
	int count=0;            //--> Why TLE ?
	for(int x=0; x<=k; x++)
		for(int y=0; y<=k; y++)
			for(int z=0; z<=k; z++)
				if(x+y+z==s) count++;
	cout<<count;
	*/

